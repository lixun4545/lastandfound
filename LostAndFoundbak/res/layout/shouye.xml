<?xml version="1.0" encoding="utf-8"?>

<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/shouye"
    android:orientation="vertical" 
    >

<TableLayout
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:layout_alignParentBottom="true"
    android:layout_weight="1" >
		<TableRow
		      android:id="@+id/tableRow3"
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:layout_weight="7.5" >
		</TableRow>
        <TableRow
            android:id="@+id/tableRow1"
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:layout_weight="2" >

            <Button
                android:id="@+id/buttonFou"
                android:layout_width="fill_parent"
                android:layout_height="fill_parent"
                android:layout_weight="1"
                android:textColor="#444444"
                android:text="发布信息"
                android:background="@drawable/fabu_button"
        		 />
            <Button
                android:id="@+id/buttonFou2"
                android:layout_width="fill_parent"
                android:layout_height="fill_parent"
                android:layout_weight="1"
                android:textColor="#444444"
                android:text="发布信息"
                android:background="@drawable/fabu_button"
        		 />
			 <Button
			     android:id="@+id/buttonLos"
			     android:layout_width="fill_parent"
			     android:layout_height="fill_parent"
			     android:layout_weight="1"
			      android:textColor="#444444"
			        android:background="@drawable/sousuo_button"
                android:text="物品搜索"
			      />

            <Button
                android:id="@+id/buttonSig"
                android:layout_width="fill_parent"
                android:layout_height="fill_parent"
                android:layout_weight="1"
                 android:textColor="#444444"
                android:text="用户登录"
                android:background="@drawable/denglu_button"
                
                />

        </TableRow>

        <TableRow
            android:id="@+id/tableRow2"
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:layout_weight="2" >
 				<Button
                android:id="@+id/buttonReg"
                android:layout_width="fill_parent"
                android:layout_height="fill_parent"
                android:layout_weight="1"
                android:textColor="#444444"
                  android:background="@drawable/zhuce_button"
                android:text="用户注册"
                 />
            <Button
                android:id="@+id/buttonReg2"
                android:layout_width="fill_parent"
                android:layout_height="fill_parent"
                android:layout_weight="1"
                android:textColor="#444444"
                  android:background="@drawable/zhuce_button"
                android:text="用户注册"
                 />
            <Button
                android:id="@+id/button_myself"
                android:layout_width="fill_parent"
                android:layout_height="fill_parent"
                android:layout_weight="1"
               android:textColor="#444444"
                 android:background="@drawable/geren_button"
                 android:text="个人中心"
                 />

           

            <Button
                android:id="@+id/buttonMod"
                android:layout_width="fill_parent"
                android:layout_height="fill_parent"
                 android:textColor="#444444"
                android:layout_weight="1"
                 android:background="@drawable/xiugai_button"
                android:text="修改信息"
                 />
        </TableRow>
    </TableLayout>

</RelativeLayout>